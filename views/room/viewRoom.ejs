<!DOCTYPE html>
<html lang="en">
  <%- include ("partials/head", { title: "Room", href: "/asset/styling.css" }); %>

  <body>
    <h1>List of room: (<%= room.length %>)</h1>

     <div class="table-responsive-sm">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>id</th>
            <th>nama room</th>
            <th>player_1</th>
            <th>Player_2</th>
            <th>Move Player 2</th>
            <th>Move player 1</th>
            <th class="d-print-none">
              <a class="btn btn-sm btn-success" href="/users/create">Add</a>
            </th>
          </tr>
        </thead>
        <tbody>
          <% room.forEach ((i)=>  { %>
            <tr>
              <td><%= i.id %></td>
              <td><%= i.nama_room %></td>
              <td><%= i.id_player_1 %></td>
              <td><%= i.id_player_2 %></td>
              <td><%= i.move_player_2 %></td>
              <td><%= i.move_player_1 %></td>
              <td class="d-print-none">
                <a class="btn btn-sm btn-primary" href="/room/<%= i.id %>">Detail</a>
                <a class="btn btn-sm btn-warning" href="/room/update/<%= i.id %>">Update</a>
                <a class="btn btn-sm btn-danger" href="/room/delete/<%= i.id %>">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>

</html>